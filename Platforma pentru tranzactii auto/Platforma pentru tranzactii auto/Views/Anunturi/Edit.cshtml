@model Platforma_pentru_tranzactii_auto.Models.Anunturi

@{
    ViewData["Title"] = "Editare Anunț";
}

<div class="container mt-5 mb-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">

            <div class="card shadow-lg border-0">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0"><i class="bi bi-pencil-square"></i> Editare Anunț</h4>
                </div>

                <div class="card-body p-4">
                    <form asp-action="Edit" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <input type="hidden" asp-for="ID_Anunt" />
                        <input type="hidden" asp-for="Data_Postarii" />
                        <input type="hidden" asp-for="Nr_Vizualizari" />

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Marca" class="form-label fw-bold">Marca</label>
                                <input asp-for="Marca" class="form-control" placeholder="ex: BMW" />
                                <span asp-validation-for="Marca" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Model" class="form-label fw-bold">Model</label>
                                <input asp-for="Model" class="form-control" placeholder="ex: Seria 3" />
                                <span asp-validation-for="Model" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Pret" class="form-label fw-bold">Preț (€)</label>
                                <div class="input-group">
                                    <input asp-for="Pret" class="form-control" type="number" />
                                    <span class="input-group-text">EUR</span>
                                </div>
                                <span asp-validation-for="Pret" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="An_Fabricatie" class="form-label fw-bold">An Fabricație</label>
                                <input asp-for="An_Fabricatie" class="form-control" type="number" min="1900" max="2025" />
                                <span asp-validation-for="An_Fabricatie" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Kilometraj" class="form-label fw-bold">Kilometraj</label>
                                <div class="input-group">
                                    <input asp-for="Kilometraj" class="form-control" type="number" />
                                    <span class="input-group-text">km</span>
                                </div>
                                <span asp-validation-for="Kilometraj" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Locatie" class="form-label fw-bold">Locație</label>
                                <input asp-for="Locatie" class="form-control" placeholder="ex: București" />
                                <span asp-validation-for="Locatie" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Descriere" class="form-label fw-bold">Descriere Detaliată</label>
                            <textarea asp-for="Descriere" class="form-control" rows="4" placeholder="Descrie starea mașinii, dotări, etc."></textarea>
                            <span asp-validation-for="Descriere" class="text-danger"></span>
                        </div>

                        <div class="card bg-light border-0 mb-4">
                            <div class="card-body">
                                <h5 class="card-title text-secondary border-bottom pb-2">Gestionează Imaginea</h5>
                                <div class="row align-items-center">
                                    <div class="col-md-4 text-center mb-3 mb-md-0">
                                        <p class="mb-1 text-muted small">Imagine Curentă</p>
                                        @if (Model.Imagine_Anunt != null && Model.Imagine_Anunt.Length > 0)
                                        {

                                            <img src="data:image/*;base64,@(Convert.ToBase64String(Model.Imagine_Anunt))"
                                                 class="img-thumbnail shadow-sm"
                                                 style="max-height: 150px; object-fit: cover;"
                                                 alt="Imagine curentă" />
                                        }
                                        else
                                        {
                                            <div class="border rounded bg-white py-4 text-muted">
                                                <i class="bi bi-image" style="font-size: 2rem;"></i><br>
                                                Fără imagine
                                            </div>
                                        }
                                    </div>
                                    <div class="col-md-8">
                                        <label class="form-label">Încarcă o imagine nouă (înlocuiește imaginea veche)</label>
                                        <input type="file" name="imagineUpload" class="form-control form-control-lg" accept="image/*" />
                                        <div class="form-text">Fișiere acceptate: .jpg, .jpeg, .png</div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="mb-4">
                            <label asp-for="UserId" class="form-label text-muted">Utilizator (Proprietar)</label>
                            <select asp-for="UserId" class="form-select bg-light" asp-items="ViewBag.UserId"></select>
                            <span asp-validation-for="UserId" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between align-items-center mt-4">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left"></i> Înapoi la Listă
                            </a>
                            <button type="submit" class="btn btn-primary btn-lg px-5">
                                <i class="bi bi-save"></i> Salvează Modificările
                            </button>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}