@model Platforma_pentru_tranzactii_auto.Models.Anunturi

@{
    ViewData["Title"] = "Editare Anunț";
}

<div class="container mt-5 mb-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0"><i class="bi bi-pencil-square"></i> Editare Anunț</h4>
                </div>

                <div class="card-body p-4">
                    <form asp-action="Edit" enctype="multipart/form-data" id="editForm">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <input type="hidden" asp-for="ID_Anunt" />
                        <input type="hidden" asp-for="Data_Postarii" />
                        <input type="hidden" asp-for="Nr_Vizualizari" />

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Marca" class="form-label fw-bold">Marca</label>
                                <input asp-for="Marca" class="form-control" placeholder="ex: BMW" />
                                <span asp-validation-for="Marca" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Model" class="form-label fw-bold">Model</label>
                                <input asp-for="Model" class="form-control" placeholder="ex: Seria 3" />
                                <span asp-validation-for="Model" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Pret" class="form-label fw-bold">Preț (€)</label>
                                <div class="input-group">
                                    <input asp-for="Pret" class="form-control" type="number" />
                                    <span class="input-group-text">EUR</span>
                                </div>
                                <span asp-validation-for="Pret" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="An_Fabricatie" class="form-label fw-bold">An Fabricație</label>
                                <input asp-for="An_Fabricatie" class="form-control" type="number" min="1900" max="2025" />
                                <span asp-validation-for="An_Fabricatie" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Kilometraj" class="form-label fw-bold">Kilometraj</label>
                                <div class="input-group">
                                    <input asp-for="Kilometraj" class="form-control" type="number" />
                                    <span class="input-group-text">km</span>
                                </div>
                                <span asp-validation-for="Kilometraj" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Locatie" class="form-label fw-bold">Locație</label>
                                <input asp-for="Locatie" class="form-control" placeholder="ex: București" />
                                <span asp-validation-for="Locatie" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Descriere" class="form-label fw-bold">Descriere Detaliată</label>
                            <textarea asp-for="Descriere" class="form-control" rows="4"></textarea>
                            <span asp-validation-for="Descriere" class="text-danger"></span>
                        </div>

                        <div class="card bg-light border-0 mb-4">
                            <div class="card-body">
                                <h5 class="card-title text-secondary border-bottom pb-2">Gestionează Galeria Foto</h5>

                                @if (Model.GalerieImagini != null && Model.GalerieImagini.Any())
                                {
                                    <div class="row g-2 mb-3">
                                        @foreach (var img in Model.GalerieImagini)
                                        {
                                            <div class="col-4 col-md-3 position-relative">
                                                <img src="data:image/*;base64,@(Convert.ToBase64String(img.Imagine))"
                                                     class="img-thumbnail w-100"
                                                     style="height: 100px; object-fit: cover;" />

                                                <button type="button"
                                                        class="btn btn-danger btn-sm position-absolute top-0 end-0 m-1 p-0 d-flex justify-content-center align-items-center"
                                                        style="width: 20px; height: 20px; border-radius: 50%;"
                                                        onclick="stergeImagine(@img.ID_Imagine)">
                                                    <span style="font-size: 12px;">&times;</span>
                                                </button>
                                            </div>
                                        }
                                    </div>
                                }
                                else
                                {
                                    <p class="text-muted small">Nu există imagini suplimentare în galerie.</p>
                                }

                                <div class="mt-3">
                                    <label class="form-label fw-bold">Adaugă imagini noi</label>
                                    <input type="file" name="imaginiUpload" class="form-control" multiple accept="image/*" />
                                    <div class="form-text">Poți selecta mai multe. Ele se vor adăuga la cele existente.</div>
                                </div>
                            </div>
                        </div>

                        <div class="mb-4">
                            <label asp-for="UserId" class="form-label text-muted">Utilizator (Proprietar)</label>
                            <select asp-for="UserId" class="form-select bg-light" asp-items="ViewBag.UserId"></select>
                            <span asp-validation-for="UserId" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between align-items-center mt-4">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left"></i> Înapoi la Listă
                            </a>
                            <button type="submit" class="btn btn-primary btn-lg px-5">
                                <i class="bi bi-save"></i> Salvează Modificările
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<form id="formStergeImagine" asp-action="StergeImagine" method="post">
    <input type="hidden" name="id" id="idImagineDeSters" />
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        // Funcția care pune ID-ul în formularul ascuns și îl trimite
        function stergeImagine(id) {
            if (confirm('Ești sigur că vrei să ștergi această imagine?')) {
                document.getElementById('idImagineDeSters').value = id;
                document.getElementById('formStergeImagine').submit();
            }
        }
    </script>
}