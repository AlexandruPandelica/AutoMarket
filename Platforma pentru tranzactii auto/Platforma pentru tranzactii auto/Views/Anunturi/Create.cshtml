@model Platforma_pentru_tranzactii_auto.Models.Anunturi

@{
    ViewData["Title"] = "Adaugă Anunț";
}

<main class="container py-5 mt-4">

    <div class="text-center mb-5">
        <h1 class="display-5 fw-bold">Adaugă un Anunț Nou</h1>
        <p class="text-muted mb-0">
            Completează detaliile mașinii pentru a o publica pe platformă.
        </p>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-8">

            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-body p-4 p-md-5">

                    <h4 class="fw-semibold mb-4">
                        Detalii anunț
                    </h4>

                    <form asp-action="Create" method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="Marca" class="form-label fw-semibold"></label>
                                <input asp-for="Marca" class="form-control" placeholder="Ex: BMW, Audi, Mercedes" />
                                <span asp-validation-for="Marca" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Model" class="form-label fw-semibold"></label>
                                <input asp-for="Model" class="form-control" placeholder="Ex: A5, Q5, C-Class" />
                                <span asp-validation-for="Model" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Pret" class="form-label fw-semibold"></label>
                                <div class="input-group">
                                    <input asp-for="Pret" class="form-control" placeholder="Ex: 15000" />
                                    <span class="input-group-text">€</span>
                                </div>
                                <span asp-validation-for="Pret" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="An_Fabricatie" class="form-label fw-semibold"></label>
                                <input asp-for="An_Fabricatie" class="form-control" placeholder="Ex: 2019" />
                                <span asp-validation-for="An_Fabricatie" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Kilometraj" class="form-label fw-semibold"></label>
                                <div class="input-group">
                                    <input asp-for="Kilometraj" class="form-control" placeholder="Ex: 120000" />
                                    <span class="input-group-text">km</span>
                                </div>
                                <span asp-validation-for="Kilometraj" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Locatie" class="form-label fw-semibold"></label>
                                <input asp-for="Locatie" class="form-control" placeholder="Ex: Craiova, București" />
                                <span asp-validation-for="Locatie" class="text-danger small"></span>
                            </div>

                            <div class="col-12">
                                <label asp-for="Descriere" class="form-label fw-semibold"></label>
                                <textarea asp-for="Descriere" class="form-control" rows="4"
                                          placeholder="Scrie o descriere atractivă: stare tehnică, dotări, proprietar unic etc."></textarea>
                                <span asp-validation-for="Descriere" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label class="form-label fw-semibold">Încarcă imagini (Poți selecta mai multe)</label>
                                <input type="file" name="imaginiUpload" class="form-control" multiple accept="image/*" />
                                <small class="text-muted d-block mt-1">
                                    Format: JPG, PNG · Prima imagine selectată va fi coperta.
                                </small>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="UserId" class="form-label fw-semibold">Utilizator</label>
                                <select asp-for="UserId" class="form-select" asp-items="ViewBag.UserId"></select>
                                <span asp-validation-for="UserId" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between align-items-center mt-4">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                ← Înapoi la listă
                            </a>
                            <button type="submit" class="btn btn-primary px-4">
                                Publică anunțul
                            </button>
                        </div>
                    </form>

                </div>
            </div>

        </div>
    </div>
</main>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
