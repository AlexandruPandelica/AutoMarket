@model IEnumerable<Platforma_pentru_tranzactii_auto.Models.Anunturi>

@{
    ViewData["Title"] = "Anunțuri";
}

<div class="row justify-content-center mb-5">
    <div class="col-md-8">
        <form asp-action="Index" method="get">
            <div class="input-group shadow-sm rounded-pill overflow-hidden bg-white p-1">

                <input type="text"
                       name="searchString"
                       value="@ViewData["CurrentFilter"]"
                       class="form-control border-0 ps-4"
                       placeholder="Caută marcă, model, oraș..."
                       style="box-shadow: none;">

                <button type="submit" class="btn btn-primary rounded-pill px-4 m-1">
                    <i class="bi bi-search"></i> Caută
                </button>

                @if (ViewData["CurrentFilter"] != null)
                {
                    <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-3 m-1" title="Resetează filtrele">
                        <i class="bi bi-x-lg"></i>
                    </a>
                }
            </div>
        </form>
    </div>
</div>


<main class="container py-5">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="fw-bold mb-1">Anunțuri</h1>
            <p class="text-muted mb-0">Explorează mașinile disponibile pe platformă.</p>
        </div>
        <a asp-action="Create" class="btn btn-primary rounded-pill">
            <i class="bi bi-plus-circle"></i> Adaugă anunț
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info rounded-3">
            Momentan nu există anunțuri. Fii primul care adaugă unul! 🚗
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var item in Model)
            {
                <div class="col-12 col-md-6 col-lg-4">
                    <div class="card shadow-sm h-100 anunt-card border-0">

                        <div class="position-relative">
                            @if (item.Imagine_Anunt != null && item.Imagine_Anunt.Length > 0)
                            {
                                <img src="data:image/*;base64,@(Convert.ToBase64String(item.Imagine_Anunt))"
                                     class="card-img-top anunt-card-img"
                                     alt="Imagine @item.Marca @item.Model" />
                            }
                            else
                            {
                                <div class="anunt-card-img d-flex align-items-center justify-content-center bg-light text-muted">
                                    Fără imagine
                                </div>
                            }

                            <!-- Preț -->
                            <span class="badge bg-primary price-badge">
                                @item.Pret.ToString("N0") €
                            </span>

                            <!-- Buton Favorite (placeholder - îl vei lega la acțiunea ta) -->
                            <form asp-controller="Favorite"
                                  asp-action="Toggle"
                                  method="post"
                                  class="favorite-form position-absolute top-0 end-0 m-3">

                                @Html.AntiForgeryToken()
                                <input type="hidden" name="anuntId" value="@item.ID_Anunt" />

                                <button type="submit" class="favorite-btn" title="Adaugă la favorite">
                                    <i class="bi @(ViewBag.FavoriteIds.Contains(item.ID_Anunt)
                                       ? "bi-heart-fill"
    :                                    "bi-heart")" style="color: red !important; font-size: 1.6rem;"></i>
                                </button>
                            </form>

                        </div>

                        <div class="card-body">
                            <h5 class="card-title mb-1">
                                @item.Marca @item.Model
                            </h5>
                            <p class="text-muted small mb-2">
                                An fabricație: <strong>@item.An_Fabricatie</strong> ·
                                Kilometraj: <strong>@item.Kilometraj.ToString("N0") km</strong>
                            </p>

                            @if (!string.IsNullOrWhiteSpace(item.Descriere))
                            {
                                <p class="card-text small mb-3 text-truncate">
                                    @item.Descriere
                                </p>
                            }

                            <div class="d-flex justify-content-between align-items-center small text-muted mb-2">
                                <span>
                                    <i class="bi bi-geo-alt"></i> @item.Locatie
                                </span>
                                <span>
                                    <i class="bi bi-calendar3"></i>
                                    @item.Data_Postarii.ToString("dd.MM.yyyy HH:mm")
                                </span>
                            </div>

                            <div class="d-flex justify-content-between align-items-center small text-muted">
                                <span>
                                    <i class="bi bi-eye"></i> @item.Nr_Vizualizari vizualizări
                                </span>
                                <span>
                                    <i class="bi bi-person-circle"></i>
                                    <strong>@(item.User?.Prenume ?? "Necunoscut") @(item.User?.Nume ?? "Necunoscut")</strong>
                                </span>
                            </div>
                        </div>

                        <div class="card-footer bg-white border-0 pt-0 pb-3 px-3">
                            <div class="d-flex justify-content-between">
                                <a asp-action="Details" asp-route-id="@item.ID_Anunt" class="btn btn-outline-primary btn-sm">
                                    <i class="bi bi-info-circle"></i> Detalii
                                </a>

                                <div>
                                    <a asp-action="Edit" asp-route-id="@item.ID_Anunt" class="btn btn-outline-secondary btn-sm me-1">
                                        <i class="bi bi-pencil-square"></i> Edit
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.ID_Anunt" class="btn btn-outline-danger btn-sm">
                                        <i class="bi bi-trash"></i> Delete
                                    </a>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            }
        </div>
    }
</main>
