@model Platforma_pentru_tranzactii_auto.Models.Comentarii
@using Microsoft.AspNetCore.Identity
@inject UserManager<Utilizator> UserManager

<div class="card border-0 shadow-sm mb-3 fade-in-animation" id="comment-@Model.ID_Comentariu">
    <div class="card-body p-3">
        <div class="d-flex justify-content-between align-items-start">

            <div class="d-flex align-items-center gap-2">
                <div class="bg-primary text-white rounded-circle d-flex justify-content-center align-items-center"
                     style="width: 35px; height: 35px; font-weight: bold;">
                    @(Model.User?.Email?.Substring(0, 1).ToUpper() ?? "U")
                </div>
                <div>
                    <h6 class="mb-0 fw-bold">@(Model.User?.Email ?? "Acum")</h6>
                    <small class="text-muted" style="font-size: 0.8rem;">
                        @Model.DataComentariu.ToLocalTime().ToString("dd MMM yyyy, HH:mm")
                    </small>
                </div>
            </div>

            <div class="d-flex flex-column align-items-end">
                <div class="text-warning mb-1">
                    @for (int i = 0; i < Model.Recenzie; i++)
                    {
                        <i class="bi bi-star-fill"></i>
                    }
                </div>

                @if (User.Identity.IsAuthenticated && UserManager.GetUserId(User) == Model.UserId.ToString())
                {
                    <form asp-action="StergeComentariu" method="post"
                          class="delete-comment-form"
                          data-comment-id="@Model.ID_Comentariu">

                        <input type="hidden" name="id" value="@Model.ID_Comentariu" />

                        <button type="submit" class="btn btn-link text-danger p-0 text-decoration-none" style="font-size: 0.85rem;">
                            <i class="bi bi-trash"></i> Șterge
                        </button>
                    </form>
                }
            </div>
        </div>

        <p class="card-text text-dark mt-2 ps-1">
            @Model.Text_Comentariu
        </p>
    </div>
</div>