@{
    ViewData["Title"] = "Acasă";
}

<style>
    .hero-container {
        position: relative;
        width: 100%;
        height: 80vh;
        overflow: hidden;
        display: flex;
        justify-content: center;
        align-items: center;
        color: white;
        text-align: center;
    }

    .hero-video {
        position: absolute;
        top: 50%;
        left: 50%;
        min-width: 100%;
        min-height: 100%;
        width: auto;
        height: auto;
        z-index: -1;
        transform: translate(-50%, -50%);
        object-fit: cover;
        filter: brightness(60%);
    }

    .hero-content {
        z-index: 5;
        max-width: 800px;
    }

    .hero-title {
        font-size: 4rem;
        font-weight: bold;
        text-shadow: 0 4px 20px rgba(0,0,0,0.5);
    }

    .hero-subtitle {
        font-size: 1.3rem;
        margin-top: 15px;
        margin-bottom: 30px;
        text-shadow: 0 4px 15px rgba(0,0,0,0.5);
    }

    .hero-btn {
        padding: 14px 32px;
        font-size: 1.2rem;
        border-radius: 50px;
        background: #007bff;
        color: white;
        border: none;
        transition: 0.3s;
    }

        .hero-btn:hover {
            background: #0056b3;
            transform: scale(1.05);
        }
</style>

<div class="hero-container">
    <!-- VIDEO BACKGROUND -->
    <img src="/videos/audiRS7.gif" class="hero-video" />

    <!-- CONTENT -->
    <div class="hero-content">
        <h1 class="hero-title">Bine ai venit pe AutoMarket</h1>
        <p class="hero-subtitle">
            Platforma modernă de tranzacții auto — Descoperă cele mai noi anunțuri.
        </p>

        <a href="/Anunturi" class="btn hero-btn">
            Vezi anunțuri →
        </a>
    </div>
</div>
