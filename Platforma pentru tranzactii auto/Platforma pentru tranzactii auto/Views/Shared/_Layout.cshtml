<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Platforma Auto</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <style>
        /* NAVBAR */
        .navbar-custom {
            background: #0d1117;
            padding-top: 12px;
            padding-bottom: 12px;
            box-shadow: 0 4px 10px rgba(0,0,0,0.35);
        }
        .navbar-custom .navbar-brand {
            color: #58a6ff !important;
            font-weight: 600;
            font-size: 1.4rem;
        }
        .navbar-custom .nav-link {
            color: #c9d1d9 !important;
            margin-right: 15px;
            font-size: 1.05rem;
            transition: 0.2s;
        }
        .navbar-custom .nav-link:hover {
            color: #58a6ff !important;
        }

        /* BACKGROUND PAGE */
        body {
            background-color: #f6f8fa;
            font-family: 'Segoe UI', sans-serif;
        }

        /* FOOTER */
        footer {
            background-color: #0d1117;
            color: #8b949e;
            padding: 20px 0;
            margin-top: 40px;
            border-top: 1px solid #21262d;
        }
        footer a {
            color: #58a6ff;
            text-decoration: none;
        }
    </style>
</head>

<body>

    <!-- NAVBAR MODERN -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-custom">
            <div class="container">

                <!-- LOGO -->
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                    🚗 AutoMarket
                </a>

                <button class="navbar-toggler text-white" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- MENIU -->
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">Acasă</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Anunturi" asp-action="Create">Anunțuri</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Privacy">Despre</a>
                        </li>

                    </ul>

                    <!-- LOGIN / REGISTER / PROFIL -->
                    <partial name="_LoginPartial" />
                </div>

            </div>
        </nav>
    </header>

    <div class="container mt-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>


    <!-- Scripts -->
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
